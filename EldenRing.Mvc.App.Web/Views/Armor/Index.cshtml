@{
    List<Armor> list = ViewBag.list;
    Layout = "_Layout";
}

<h1> Test page ARMOR</h1>
<table>
    <tr>
        <th> Id</th>
        <th> Name</th>
        <th> Description</th>
        <th> Weight</th>
    </tr>
    @if (list.Count>0)
    {
        foreach (var item in list)
        {
            <tr>
                <td><img src="@item.image" style="width:200px;" /></td>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.description</td>
                <td>@item.weight lbs</td>
            </tr>
        }

    }else{
        <h1> La liste est vide</h1>
    }
    
</table>